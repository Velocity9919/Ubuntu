
stage("deploy to tomcat"){
            steps{
                sshagent(['tomcat-privatekey']) {
                    sh "scp -o StrictHostKeyChecking=no target/petclinic.war ubuntu@3.109.3.26:/opt/tomcat/webapps"
}
            }
        }
    }
}



chown -R ubuntu:ubuntu /opt
