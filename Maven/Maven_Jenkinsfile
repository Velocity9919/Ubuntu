pipeline {
    agent any
    tools {
        maven "maven 3.9.1"
    }
    stages {
        stage("Cleanup Workspace"){
            steps{
                cleanWs()
            }
        }

        stage("Git Checkout"){
            steps{
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/naresh9919/Petclinic.git'
            }
        }

        stage("build maven"){
            steps {
                sh "mvn clean compile"
            }
        }

        stage("test"){
            steps{
                sh "mvn test"
            }
        }
    }
}
